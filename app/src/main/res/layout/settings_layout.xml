<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="100dp"
    android:background="@drawable/item_background_1">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Remember Me"
        android:textColor="@color/myWhite"
        app:layout_constraintBottom_toBottomOf="@+id/githubbut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logoutbut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_rounded"
        android:padding="12dp"
        android:text="Log Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/remembercheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <ImageButton
        android:id="@+id/githubbut"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/transparent"
        android:maxWidth="75dp"
        android:maxHeight="75dp"
        android:scaleType="fitXY"
        android:src="@drawable/github"
        app:layout_constraintBottom_toTopOf="@+id/logoutbut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/unitybut"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="8dp"
        android:background="@color/transparent"
        android:maxWidth="75dp"
        android:maxHeight="75dp"
        android:scaleType="fitXY"
        android:src="@drawable/unity"
        app:layout_constraintBottom_toBottomOf="@+id/githubbut"
        app:layout_constraintEnd_toStartOf="@+id/githubbut" />

    <ImageButton
        android:id="@+id/webbut"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="8dp"
        android:background="@color/transparent"
        android:maxWidth="75dp"
        android:maxHeight="75dp"
        android:scaleType="fitXY"
        android:src="@drawable/browser"
        app:layout_constraintBottom_toBottomOf="@+id/githubbut"
        app:layout_constraintEnd_toStartOf="@+id/unitybut" />


</androidx.constraintlayout.widget.ConstraintLayout>